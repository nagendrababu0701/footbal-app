<div class="form-box" id="login-box">
  <div class="header">Sign In</div>
  <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
  <% end %>
  <%= form_tag sessions_path do %>
    <div class="body bg-gray">
      <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email], :class=>"form-control",:placeholder=>"Email ID" %>
      </div>
      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, params[:password], :class=>"form-control",:placeholder=>"Password" %>
      </div>
      <div class="form-group">
        <%= link_to "forgotten password?", new_password_reset_path %>
      </div>
      <div class="field">
        <%= check_box_tag :remember_me, 1, params[:remember_me] %>
        <%= label_tag :remember_me %>
      </div>
    </div>
    <div class="footer">
      <%= submit_tag "Log in",:id=>'submit',:class=>'btn bg-olive btn-block' %>
      <!--<button type="submit" class="btn bg-olive btn-block">Sign me in</button>-->
      <%=link_to 'Sign Up', new_user_path,:class=>'text-center' %>
    </div>
  <% end %>
